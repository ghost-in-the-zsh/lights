{
  "openapi": "3.0.2",
  "info": {
    "title": "Lights API",
    "description": "This is the ***interactive*** Lights API documentation.",
    "version": "0.1.0",
    "contact": {
      "email": "ray.l.rivera@gmail.com"
    }
  },
  "externalDocs": {
    "description": "External documentation",
    "url": "https://gitlab.com/ghost-in-the-zsh/lights"
  },
  "servers": [
    {
      "url": "https://localhost"
    },
    {
      "url": "http://localhost:5000"
    }
  ],
  "tags": [
    {
      "name": "Lights",
      "description": "The lights in your home."
    }
  ],
  "paths": {
    "/api/v0/lights": {
      "get": {
        "tags": [
          "Lights"
        ],
        "summary": "Get a list of Lights",
        "description": "",
        "responses": {
          "200": {
            "description": "Operation successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Light"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Lights"
        ],
        "summary": "Create a new Light",
        "description": "",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "is_powered_on": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Light created",
            "headers": {
              "Location": {
                "description": "The URL for the newly created Light",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Light"
                }
              }
            }
          },
          "400": {
            "description": "Data validation or formatting error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Lights"
        ],
        "summary": "Delete *ALL* Lights from the system",
        "description": "",
        "responses": {
          "204": {
            "description": "No content"
          },
          "500": {
            "description": "Unknown error. All Lights could not be deleted.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v0/lights/{id}": {
      "get": {
        "tags": [
          "Lights"
        ],
        "summary": "Get a Light, by ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The Light's ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operation successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Light"
                }
              }
            }
          },
          "404": {
            "description": "The Light with the given ID was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Lights"
        ],
        "summary": "Replace a Light, by ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The Light's ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "is_powered_on": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "name",
                  "is_powered_on"
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Operation successful. No content returned."
          },
          "400": {
            "description": "Bad request. Data failed validation in some way.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "The Light with the given ID was not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Lights"
        ],
        "summary": "Delete one Light, by ID",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The Light's ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "500": {
            "description": "Unknown error. The Light could not be deleted.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Light": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "is_powered_on": {
            "type": "boolean"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error_text": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    }
  }
}
